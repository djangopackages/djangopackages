  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: MkDocs",
      "type": "python",
      "request": "launch",
      "module": "mkdocs",
      "args": [
        "serve",
        "-f",
        "${workspaceFolder}/docs/mkdocs.yml",
        "--dev-addr",
        "0.0.0.0:4000"
      ],
      "justMyCode": false
    },
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        // "--noreload",
        "0.0.0.0:8000"
      ],
      "django": true,
      "justMyCode": false
    },
    {
      "name": "Python: PyTest",
      "type": "python",
      "request": "launch",
      "console": "integratedTerminal",
      "python": "${command:python.interpreterPath}",
      "module": "pytest",
      "args": [
        // "-c",
        // "${workspaceFolder}/pytest.ini",
        "--reuse-db",
        // "-v",
        // "-x",
        // "-n4",
      ],
      "django": true,
      "justMyCode": false
    }
  ]
}
